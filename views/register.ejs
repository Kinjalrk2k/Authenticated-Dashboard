<%- include('partials/header'); %>

<div class="container d-flex justify-content-center mt-5">
  <div class="card">
    <h1 class="card-header">Register!</h5>
    <div class="card-body">
      <p class="card-text text-muted">Fill up this form to register yourself to the database!</p>
      <form action="/register" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Username</label>
          <input type="text" name="username" class="form-control" id="exampleInputEmail1">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" name="password" class="form-control" id="exampleInputPassword1">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </div>
    <div class="card-footer">
      Already registered?
      <a href="/login" class="btn btn-success ml-3">Login</a>
      <a type="button" class="btn btn-outline-secondary btn-block mt-3" href="/">Back to Homepage</a>
    </div>
  </div>
</div>

<%- include('partials/footer'); %>
